{
  "name": "moleculer-opentelemetry-demo",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "scripts": {
    "dev": "moleculer-runner --repl --hot services/**/*.service.js",
    "dev:api": "node --inspect=0.0.0.0:9229 node_modules/moleculer/bin/moleculer-runner.js --repl --hot services/api.service.js",
    "dev:svc": "node --inspect=0.0.0.0:9228 node_modules/moleculer/bin/moleculer-runner.js --repl --hot services/greeter.service.js services/products.service.js",
    "start": "moleculer-runner",
    "cli": "moleculer connect Redis",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint services"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "eslint": "^7.32.0",
    "jest": "^27.1.0",
    "jest-cli": "^27.1.0",
    "moleculer-repl": "^0.6.6"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.0.4",
    "@opentelemetry/auto-instrumentations-node": "^0.27.3",
    "@opentelemetry/exporter-jaeger": "^1.0.1",
    "@opentelemetry/propagator-b3": "^1.0.1",
    "@opentelemetry/sdk-node": "^0.27.0",
    "@opentelemetry/semantic-conventions": "^1.0.1",
    "ioredis": "^4.27.9",
    "moleculer": "^0.14.16",
    "moleculer-db": "^0.8.15",
    "moleculer-db-adapter-mongo": "^0.4.13",
    "moleculer-web": "^0.10.2"
  },
  "engines": {
    "node": ">= 12.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  }
}
